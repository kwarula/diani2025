{
  "expo": {
    "name": "Discover Diani",
    "slug": "discover-diani",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "discoverdiani",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app uses location to provide personalized recommendations and help you find nearby attractions, restaurants, and services in Diani Beach."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}